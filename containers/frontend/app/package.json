{
    "scripts": {
        "cleanUp": "rm -rf ./production",
        "compress": "vulcanize index.html | html-minifier --remove-attribute-quotes --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes  --remove-style-link-type-attributes --remove-tag-whitespace --sort-attributes  --sort-class-name --use-short-doctype --minify-css --minify-js --remove-comments --html-5 > ./build.html",
        "outputDir": "mkdir production && mv ./build.html ./production/index.html && cp -R ./bower_components ./production/bower_components && cp -R ./src ./production/src",
        "build": "bower install && npm run cleanUp && npm run compress && npm run outputDir",
        "serve": "http-server ./production"
    }
}
